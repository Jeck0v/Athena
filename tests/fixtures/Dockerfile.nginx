FROM nginx:alpine

# Build arguments
ARG NGINX_VERSION=1.25
ARG CONFIG_ENV=prod
ARG WORKER_PROCESSES=auto

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Set worker processes
RUN sed -i "s/worker_processes auto;/worker_processes ${WORKER_PROCESSES};/" /etc/nginx/nginx.conf

# Expose ports
EXPOSE 80 443

# Start nginx
CMD ["nginx", "-g", "daemon off;"]